{
  "name": "@71zone/ccm",
  "version": "0.1.0",
  "description": "CLI tool to manage Claude Code configurations from Git repositories",
  "type": "module",
  "bin": {
    "ccm": "./dist/cli.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist .turbo"
  },
  "keywords": [
    "claude",
    "claude-code",
    "cli",
    "mcp",
    "agents",
    "skills"
  ],
  "author": "71zone",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/71zone/ccm.git",
    "directory": "packages/cli"
  },
  "engines": {
    "node": ">=24.0.0"
  },
  "dependencies": {
    "@71zone/ccm-core": "workspace:*",
    "@clack/prompts": "^0.11.0",
    "citty": "^0.2.0"
  }
}
